[branch]
  sort = -committerdate

[core]
  excludesFile = ~/.config/git/ignore
  pager = delta

[credential]
	helper = osxkeychain

[delta]
  navigate = true    # use n and N to move between diff sections
  ; side-by-side = true

[diff]
  colorMoved = default

[gpg]
  format = ssh

[include]
  path = ~/.gitconfig-local

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[merge]
  conflictstyle = diff3

[pull]
  rebase = true

[push]
  default = current

[rebase]
  autosquash = true
  autostash = true

[rerere]
  enabled = true

[url "git@github.com:"]
	insteadOf = https://github.com/

