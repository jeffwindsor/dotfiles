# placed here so we can gaurentee $SRC
export LEDGER_FILE_PERSONAL_FINANCES="$SRC/github.com/jeffwindsor/fin/personal-finances/pf.journal"
export LEDGER_FILE_PERSONAL_INVESTMENTS="$SRC/github.com/jeffwindsor/fin/personal-investments/pi.journal"

export LEDGER_FILE=$LEDGER_FILE_PERSONAL_FINANCES
alias hl-pf="export LEDGER_FILE=$LEDGER_FILE_PERSONAL_FINANCES"
alias hl-pi="export LEDGER_FILE=$LEDGER_FILE_PERSONAL_INVESTMENTS"

alias hl="hledger-ui"
alias hli="hledger import"
alias hlid="hledger import --dry"
alias hlunknown="hledger -f- -I print unknown"
