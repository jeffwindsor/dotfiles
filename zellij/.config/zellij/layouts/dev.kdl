layout {
    default_tab_template {
        pane size=2 borderless=true {
            plugin location="compact-bar"
        }
        children
    }

    tab name="Dev" {
        pane split_direction="vertical" {
            pane size="60%" stacked=true {
                pane name="git"
                pane name="prompt" {
                  focus true
                }
            }
            pane size="40%" stacked=true {
                pane name="tests"
                pane name="ai"
            }
        }
    }
}
